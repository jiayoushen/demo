<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_scene"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/scene_check_in"
    tools:context="com.demo.MainActivity">

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/donut_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone"
        custom:donut_show_text="false"/>

    <ImageView
        android:id="@+id/iv_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:src="@mipmap/role_travel1_1"/>

    <TextView
        android:id="@+id/r_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_gif"
        android:layout_toLeftOf="@id/iv_gif"
        android:background="@mipmap/message_outgoing"
        android:padding="15px"
        android:textSize="15sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/l_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_gif"
        android:background="@mipmap/message_incoming_blue"
        android:padding="15px"
        android:textSize="15sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="开始"/>

    <CheckBox
        android:id="@+id/cb_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:text="显示字幕"/>
</com.zhy.autolayout.AutoRelativeLayout>
